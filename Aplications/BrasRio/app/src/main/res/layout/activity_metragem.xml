<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#ffffff"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="Logo BRASRIO"
                android:src="@drawable/ic_launcher_foreground"
                tools:src="@mipmap/ic_launcher_foreground" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BRASRIO CAMPO GRANDE"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orçamento Rápido"
                    android:textSize="14sp"
                    android:textColor="#ff6600" />

            </LinearLayout>

        </LinearLayout>

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informe a metragem (m²)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Informação do material -->
        <TextView
            android:id="@+id/tvMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Material: "
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Metragem simples -->
        <LinearLayout
            android:id="@+id/llMetragemSimples"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Metragem (m²)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMetragem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Dimensões de parede -->
        <LinearLayout
            android:id="@+id/llDimensoesParede"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Metros quadrados (m²) *">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMetrosQuadrados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Pé direito (m) *">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPeDireito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvComprimentoCalculado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comprimento calculado: 0 m"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#ff6600"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <!-- Seleção de placa -->
        <LinearLayout
            android:id="@+id/llPlacaContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de placa"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spPlaca"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_background" />

        </LinearLayout>

        <!-- Seleção de cor para pisos -->
        <LinearLayout
            android:id="@+id/llCorPisoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cor do material"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spCorPiso"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_background" />

        </LinearLayout>

        <!-- Quantidade de janelas -->
        <LinearLayout
            android:id="@+id/llJanelasContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quantidade de janelas"
                app:boxStrokeColor="#ff6600"
                app:hintTextColor="#ff6600">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etQuantidadeJanelas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLines="1"
                    android:text="0" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Digite 0 se não houver janelas"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Quantidade de portas -->
        <LinearLayout
            android:id="@+id/llPortasContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quantidade de portas"
                app:boxStrokeColor="#ff6600"
                app:hintTextColor="#ff6600">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etQuantidadePortas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLines="1"
                    android:text="0" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Digite 0 se não houver portas"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Botões -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCalcular"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="CALCULAR"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/button_primary"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnVoltar"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="VOLTAR"
                android:textSize="16sp"
                android:textColor="#ff6600"
                android:background="@drawable/button_secondary"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
